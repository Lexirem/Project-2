<h2> User Account </h2>

<ul>
  <li> <a href="/launderers"> My details </a> </li>
  <li> <a href="/myOrders"> My orders </a> </li>
  <li> <a href="/Favorites"> Favorites </a> </li>
  <li> <a href="/logout"> Log Out </a> </li>
</ul>

<div>
  <img src="user photo" alt="userphoto">
</div>

{{#if currentUserInfo.isLaunderer}}
  <h3> You are a customer </h3>

  <p>Your laundering fee is <b>${{ currentUserInfo.fee }}.</b></p>
{{else}}
  <h3> What is this page for? </h3>

  <form action="/launderers" method="post">
    <div>
      <label for="fee-input"> Set your fee </label>
      <input type="number" name="fee" id="fee-input">
    </div>

    <button> Become a Photographer </button>
  </form>
{{/if}}

<h3> Pending Pickups </h3>
<ul>
{{#each pickups}}
    <li>
      <h4> {{ this.pickupDate }} </h4>

      <ul>
        <li> <b>User</b>: {{ this.user.name }} </li>
        <li> <b>Launderer</b>: {{ this.launderer.name }} </li>
      </ul>
    </li>
{{/each}}
</ul>